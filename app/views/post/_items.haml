    .top__category__1__main
      - @ladies_items.each do |item|
        .top__category__1__main__item 
          = link_to item_path(item) do
            .top__category__1__main__item__box
              .top__category__1__main__item__box__image
                = image_tag "#{item.images[0].image}",size:"185x189"
                .top__category__1__main__item__box__image__price
                  ¥ 
                  = item.price
                .top__category__1__main__item__box__image__text
                  = item.show_soldout_item(item)
              .top__category__1__main__item__box__text
                .top__category__1__main__item__box__text__content
                  = item.name
                  .top__category__1__main__item__box__text__hidden

