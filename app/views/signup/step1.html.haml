.main-signup
  .header
    .header__icon
      = link_to image_tag("fmarket_logo_red.svg", class: "header__icon__image"),"/"

  .main
    .main__header 新規会員登録
    .main__content
      .main__content__line
        = link_to step2_signup_index_path, class: 'main__content__line__btn main__content__line__btn--mail' do
          = icon('far', 'envelope', class: 'main__content__line__btn--mail__icon')
          メールアドレスで登録する

        = link_to user_facebook_omniauth_authorize_path, method: :post, class: 'main__content__line__btn main__content__line__btn--facebook' do
          = icon('fab', 'facebook-square', class: 'main__content__line__btn--facebook__icon')
          Facebookで登録
          
        = link_to user_google_oauth2_omniauth_authorize_path, method: :post, class: 'main__content__line__btn main__content__line__btn--google' do
          = icon('fab', 'google', class: 'main__content__line__btn--google__icon') 
          Googleで登録

  .footer
    .footer__center
      %nav
        %ul.menu
          %li
            = link_to "プライバシーポリシー"
          %li
            = link_to "メルカリ利用規約"
          %li
            = link_to "特定商取引に関する表記"
      .footer__center__logo
        =link_to image_tag("logo_gray.svg", width:"80", height:"65",class:"footer__center__logo--red"),"/"
      %p.inc
        ©︎Mercari,Inc.
